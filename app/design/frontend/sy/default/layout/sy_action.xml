<?xml version="1.0" ?>
<layout>

    <actions_index_index>
        <reference name="root">
            <action method="setTemplate"><template>page/2column-right.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="sy_action/list" name="sy.action" template="sy_action/index.phtml" />
        </reference>
    </actions_index_index>
    <actions_action_index>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="sy_action/details" name="sy.action.details" template="sy_action/details.phtml" />
        </reference>
    </actions_action_index>
    <catalog_product_view>
        <reference name="content">
            <block type="sy_action/pactions" name="sy.action.product.actions" template="sy_action/productactions.phtml" />
        </reference>
    </catalog_product_view>

</layout>